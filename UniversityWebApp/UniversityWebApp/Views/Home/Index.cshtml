@model IEnumerable<Course>

@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">University</h1>
            <p class="lead text-body-secondary">Current information about courses, groups, students studying at the university. Here you can get a description of the course you are interested in. And also see the number of students in the group and choose which group you want to get to for training with us.</p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="https://th.bing.com/th/id/R.002f5facdd6a1679fe236242c9c37c7f?rik=okrFlTNpmCdZ2w&pid=ImgRaw&r=0" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="course" asp-action="detail" asp-route-id="@item.CourseId" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a type="btn btn-success" asp-controller="course" asp-action="edit" asp-route-id="@item.CourseId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a type="btn btn-success" asp-controller="course" asp-action="delete" asp-route-id="@item.CourseId" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

