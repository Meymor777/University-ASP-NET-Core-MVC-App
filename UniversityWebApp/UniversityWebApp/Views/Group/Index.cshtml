@model IEnumerable<Group>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="https://th.bing.com/th/id/R.002f5facdd6a1679fe236242c9c37c7f?rik=okrFlTNpmCdZ2w&pid=ImgRaw&r=0" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="group" asp-action="detail" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a type="btn btn-success" asp-controller="group" asp-action="edit" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a type="btn btn-success" asp-controller="group" asp-action="delete" asp-route-id="@item.GroupId" class="btn btn-sm btn-outline-secondary">Delete</a>
                                </div>
                                <small class="text-body-secondary">@item.Course.Name</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
